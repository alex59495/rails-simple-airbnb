<div class="container mt-3">
    <h1>All our flats</h1>
    <p>All <%= @flats.length %> flats</p>
    <div class="row">
    <% @flats.each do |flat| %>
        <div class="col-4">
            <div class="flat-card">
                <div class="flat-card-img" style="background-image: url('https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?w=1200')"></div>
                <div class="card-body">
                    <div class="flat-card-title"><%= flat.name %></div>
                    <p><%= flat.address %></p>
                    <div class="d-flex">
                        <div class="d-flex">
                            <i class="fas fa-male"></i>
                            <span><%= flat.number_of_guests %></span>
                        </div>
                        <div class="d-flex">
                            <i class="fas fa-dollar-sign"></i>
                            <%= flat.price_per_night %>
                        </div>
                    </div>
                    <div class="flat-card-actions">
                    <%= link_to "More info", flat_path(flat)%>
                    <%= link_to "Edit", edit_flat_path(flat), class: "text-warning"%>
                    <%= link_to "Remove", flat_path(flat), class: "text-danger", method: :delete, data: { confirm: "Are you sure?" }%>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
    </div>
</div>
